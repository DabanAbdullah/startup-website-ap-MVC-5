        <label class="control-label col-md-2" for="lang">Id</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.projectId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.projectId, "", new { @class = "text-danger" })
        </div>
    </div>


    @*<div class="form-group">
        <label class="control-label col-md-2" for="com">Company</label>
        <div class="col-md-10">
    *@
    @*@Html.DropDownList("companyId", new SelectList(ViewBag.company, "companyId", "companyName"), new { @class= "form-control" })*@


    @*<select class="form-control select2" id="company" name="company">
        @{
            foreach (companytbl l in dbb.companytbls.ToList())
            {
                <option value=@l.companyId>@l.companyname</option>
