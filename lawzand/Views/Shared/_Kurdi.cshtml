    @helper StripHTML(string input)
    {
        if (!string.IsNullOrEmpty(input))
        {
            input = Regex.Replace(input, @"(?></?\w+)(?>(?:[^>'""]+|'[^']*'|""[^""]*"")*)>", String.Empty);
            input = input.Replace("&nbsp;", " ");
            @input
        }
    }
    var rec = dbb.contacttbls.FirstOrDefault();
}
